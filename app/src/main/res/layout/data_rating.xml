<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoDataRating"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/bersihkan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namaBarangRating" />

    <TextView
        android:id="@+id/namaUser13"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="Kirim Rating"
        android:textColor="#D8151515"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/kirimRating"
        app:layout_constraintStart_toStartOf="@+id/kirimRating"
        app:layout_constraintTop_toBottomOf="@+id/kirimRating" />

    <RatingBar
        android:id="@+id/dataRating"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressBackgroundTint="#AFEBF3"
        android:progressTint="#00E1FF"
        android:stepSize="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotoDataRating" />

    <ImageView
        android:id="@+id/kirimRating"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:onClick="kembali"
        app:layout_constraintEnd_toEndOf="@+id/dataRating"
        app:layout_constraintStart_toStartOf="@+id/dataRating"
        app:layout_constraintTop_toBottomOf="@+id/dataRating"
        app:srcCompat="@drawable/sent" />

    <TextView
        android:id="@+id/awdc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Beri Rating"
        android:textColor="#D8151515"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo3"
        app:layout_constraintTop_toBottomOf="@+id/userRating" />

    <TextView
        android:id="@+id/userRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Hi User Silahkan"
        android:textColor="#D8151515"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo3"
        app:layout_constraintTop_toTopOf="@+id/logo3" />

    <TextView
        android:id="@+id/namaBarangRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Nama Barang"
        android:textColor="#D8151515"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fotoDataRating"
        app:layout_constraintStart_toStartOf="@+id/fotoDataRating"
        app:layout_constraintTop_toBottomOf="@+id/logo3" />

    <ImageView
        android:id="@+id/logo3"
        android:layout_width="98dp"
        android:layout_height="102dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cogan" />

    <ProgressBar
        android:id="@+id/barDataRating"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/namaUser13"
        app:layout_constraintStart_toStartOf="@+id/namaUser13"
        app:layout_constraintTop_toBottomOf="@+id/kirimRating" />
</androidx.constraintlayout.widget.ConstraintLayout>