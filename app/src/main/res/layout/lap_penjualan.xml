<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/abay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textNamaBarangPembayaran4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="sans-serif"
                android:text="|"
                android:textColor="#000000"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@+id/kodePenjualan"
                app:layout_constraintStart_toEndOf="@+id/aaa" />

    <TextView
        android:id="@+id/noNota"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:text="No. Nota"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/textNamaBarangPembayaran5"
        app:layout_constraintStart_toStartOf="@+id/bbb"
        app:layout_constraintTop_toTopOf="@+id/kodePenjualan" />

            <TextView
                android:id="@+id/textNamaBarangPembayaran5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="sans-serif"
                android:text="|"
                android:textColor="#000000"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@+id/noNota"
                app:layout_constraintStart_toEndOf="@+id/bbb" />

            <TextView
                android:id="@+id/textNamaBarangPembayaran6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="sans-serif"
                android:text="|"
                android:textColor="#000000"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@+id/namaPembeli"
                app:layout_constraintStart_toEndOf="@+id/textNamaPembeli" />

            <TextView
                android:id="@+id/textNamaBarangPembayaran7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="sans-serif"
                android:text="|"
                android:textColor="#000000"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@+id/tanggalPenjualan"
                app:layout_constraintStart_toEndOf="@+id/textHarga2" />

            <TextView
                android:id="@+id/kodePenjualan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Kode Penjualan"
                android:textColor="#000000"
                android:textSize="8sp"
                app:layout_constraintEnd_toStartOf="@+id/textNamaBarangPembayaran4"
                app:layout_constraintStart_toStartOf="@+id/aaa"
                app:layout_constraintTop_toTopOf="@+id/aaa" />

    <TextView
        android:id="@+id/namaPembeli"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Nama Pembeli"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/textNamaBarangPembayaran6"
        app:layout_constraintStart_toStartOf="@+id/textNamaPembeli"
        app:layout_constraintTop_toTopOf="@+id/noNota" />

    <TextView
        android:id="@+id/tanggalPenjualan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Tanggal"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/textNamaBarangPembayaran7"
        app:layout_constraintStart_toStartOf="@+id/textHarga2"
        app:layout_constraintTop_toTopOf="@+id/namaPembeli" />

    <TextView
        android:id="@+id/jumlahBayarPenjualan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Jumlah Bayar"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textHarga4"
        app:layout_constraintTop_toTopOf="@+id/tanggalPenjualan" />

    <TextView
        android:id="@+id/textHarga2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Tanggal"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textNamaBarangPembayaran6"
        app:layout_constraintTop_toTopOf="@+id/textNamaPembeli" />

    <TextView
        android:id="@+id/bbb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Nama Barang"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textNamaBarangPembayaran4"
        app:layout_constraintTop_toTopOf="@+id/aaa" />

            <TextView
                android:id="@+id/aaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:text="Kode Penjualan"
                android:textColor="#000000"
                android:textSize="8sp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/textHarga4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Harga"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textNamaBarangPembayaran7"
        app:layout_constraintTop_toTopOf="@+id/textNamaPembeli" />

    <TextView
        android:id="@+id/textNamaPembeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Nama Pembeli"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textNamaBarangPembayaran5"
        app:layout_constraintTop_toTopOf="@+id/bbb" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/textNamaBarangPembayaran4" />

            <TextView
                android:id="@+id/acxz5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="32dp"
                android:text="Pemilik"
                android:textColor="#D8151515"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/acxz6" />

            <TextView
                android:id="@+id/acxz3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:text="Pemilik"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/acxz5" />

            <TextView
                android:id="@+id/acxz6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Mengetahui"
                android:textColor="#D8151515"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/acxz5"
                app:layout_constraintStart_toStartOf="@+id/acxz5"
                app:layout_constraintTop_toBottomOf="@+id/totalHargaP" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/acxz4" />

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cogan" />

            <TextView
                android:id="@+id/acxz2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periode  :  "
                android:textColor="#D8151515"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/bulanTahunPenjualan"
                app:layout_constraintTop_toTopOf="@+id/bulanTahunPenjualan" />

            <TextView
                android:id="@+id/acxz8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:text="Omset Penjualan"
                android:textColor="#D8151515"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/totalHargaP"
                app:layout_constraintTop_toTopOf="@+id/totalHargaP" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerLapPenjualan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

            <TextView
                android:id="@+id/totalHargaP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Rp.XXXXX"
                android:textColor="#D8151515"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/acxz6"
                app:layout_constraintTop_toBottomOf="@+id/recyclerLapPenjualan" />

            <TextView
                android:id="@+id/acxz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COGAN STORE BANJARMASIN"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/logo2"
                app:layout_constraintTop_toTopOf="@+id/logo2" />

            <TextView
                android:id="@+id/acxz4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Laporan Penjualan"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo2" />

            <Button
                android:id="@+id/btn_Print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="print"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo2" />

            <TextView
                android:id="@+id/bulanTahunPenjualan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="23dp"
                android:text="Bulan Tahun"
                android:textColor="#D8151515"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>