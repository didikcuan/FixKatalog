<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textNamaBarangPembayaran4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="sans-serif"
        android:text="|"
        android:textColor="#000000"
        android:textSize="6sp"
        app:layout_constraintStart_toEndOf="@+id/textKode2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNamaBarangPembayaran5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:fontFamily="sans-serif"
        android:text="|"
        android:textColor="#000000"
        android:textSize="6sp"
        app:layout_constraintStart_toEndOf="@+id/textTotalBarang"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNamaBarangPembayaran6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="sans-serif"
        android:text="|"
        android:textColor="#000000"
        android:textSize="6sp"
        app:layout_constraintStart_toEndOf="@+id/textNamaPembeli"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kodeBPH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode Barang"
        android:textColor="#000000"
        android:textSize="6sp"
        app:layout_constraintStart_toStartOf="@+id/textKode2"
        app:layout_constraintTop_toTopOf="@+id/textKode2" />

    <TextView
        android:id="@+id/namaBPH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Barang"
        android:textColor="#000000"
        android:textSize="6sp"
        app:layout_constraintStart_toStartOf="@+id/textTotalBarang"
        app:layout_constraintTop_toTopOf="@+id/textTotalBarang" />

    <TextView
        android:id="@+id/tanggalBPH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:textColor="#000000"
        android:textSize="6sp"
        app:layout_constraintStart_toStartOf="@+id/textNamaPembeli"
        app:layout_constraintTop_toTopOf="@+id/textNamaPembeli" />

    <TextView
        android:id="@+id/hargaJualBPH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga Jual"
        android:textColor="#000000"
        android:textSize="6sp"
        app:layout_constraintStart_toStartOf="@+id/textHarga2"
        app:layout_constraintTop_toTopOf="@+id/textHarga2" />

    <TextView
        android:id="@+id/textHarga2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Harga Jual"
        android:textColor="#000000"
        android:textSize="6sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textNamaBarangPembayaran6"
        app:layout_constraintTop_toTopOf="@+id/textNamaPembeli" />

    <TextView
        android:id="@+id/textTotalBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Nama Barang"
        android:textColor="#000000"
        android:textSize="6sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textNamaBarangPembayaran4"
        app:layout_constraintTop_toTopOf="@+id/textKode2" />

    <TextView
        android:id="@+id/textKode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="2dp"
        android:text="Kode Barang"
        android:textColor="#000000"
        android:textSize="6sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNamaPembeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Tanggal"
        android:textColor="#000000"
        android:textSize="6sp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/textNamaBarangPembayaran5"
        app:layout_constraintTop_toTopOf="@+id/textTotalBarang" />


</androidx.constraintlayout.widget.ConstraintLayout>