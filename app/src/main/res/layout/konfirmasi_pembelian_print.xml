<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/abay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/abc26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Jumlah"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/abc25"
                app:layout_constraintTop_toTopOf="@+id/abc25" />

            <TextView
                android:id="@+id/abc25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="|"
                android:textColor="#D8151515"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/abc24"
                app:layout_constraintTop_toTopOf="@+id/abc24" />

            <TextView
                android:id="@+id/abc24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Ukuran"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/abc23"
                app:layout_constraintTop_toTopOf="@+id/abc23" />

            <TextView
                android:id="@+id/abc23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:text="|"
                android:textColor="#D8151515"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/abc22"
                app:layout_constraintTop_toTopOf="@+id/abc22" />

            <TextView
                android:id="@+id/abc22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Harga"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/abc18"
                app:layout_constraintTop_toTopOf="@+id/abc18" />

            <TextView
                android:id="@+id/abc18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:text="|"
                android:textColor="#D8151515"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/abc15"
                app:layout_constraintTop_toTopOf="@+id/abc15" />

            <TextView
                android:id="@+id/abc15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Nama Barang"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/lNamaPembeli2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nama Pembeli"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/logo2"
                app:layout_constraintTop_toBottomOf="@+id/logo2" />

            <TextView
                android:id="@+id/lAlamatPembeli2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/lSosMed2"
                app:layout_constraintStart_toStartOf="@+id/logo2"
                app:layout_constraintTop_toBottomOf="@+id/lNamaPembeli2" />

            <TextView
                android:id="@+id/lNoTelepon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Tlp."
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/logo2"
                app:layout_constraintTop_toBottomOf="@+id/lAlamatPembeli2" />

            <TextView
                android:id="@+id/lTanggal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Tanggal"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lSosMed2" />

            <TextView
                android:id="@+id/lPukul2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Pukul"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lTanggal2" />

            <ImageView
                android:id="@+id/kPKembali2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:onClick="kembali"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo2"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/kPPrint2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:onClick="kembali"
                app:layout_constraintEnd_toStartOf="@+id/kPKembali2"
                app:layout_constraintTop_toBottomOf="@+id/logo2"
                app:srcCompat="@drawable/printer" />

            <TextView
                android:id="@+id/lSosMed2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Sosial Media : ig _Coganstore_"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lNoPesan2" />

            <TextView
                android:id="@+id/lNoPesan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textColor="#D8151515"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/logo2" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/abc18" />

            <TextView
                android:id="@+id/acxz6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:text="Sudah Dibayar"
                android:textColor="#D8151515"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/lTotalBayar2"
                app:layout_constraintStart_toStartOf="@+id/acxz8"
                app:layout_constraintTop_toBottomOf="@+id/lTotalBayar2" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lNoTelepon2" />

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cogan" />

            <TextView
                android:id="@+id/acxz8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Jumlah Bayar : "
                android:textColor="#D8151515"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/lTotalBayar2"
                app:layout_constraintTop_toTopOf="@+id/lTotalBayar2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/kpRecycler2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

            <TextView
                android:id="@+id/lTotalBayar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:text="Total"
                android:textColor="#D8151515"

                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kpRecycler2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>